<div>
	<label for="nombre">Usuario: </label>
	<input id="nombre" type="text" placeholder="Ejemplo: eduardo" name="user[username]" required>
</div>

<div>
	<label for="nip">NIP: </label>
	<input id="nip" type="password" pattern="[0-9]{4}" placeholder="Formato: 9314" name="user[password]"" required/>
</div>	

<div>
	<label for="correo">E-mail: </label>
	<input id="correo" type="email" placeholder="Ejemplo@algo.com" name="user[correo]" >
</div>
			
<div>
	<label for="edad">Edad: </label>
	<input id="edad" type="number" placeholder="Ingrese su edad" name="user[edad]" required>
</div>
		
<div>
	<label for="sexo">Sexo: </label><br>
	<input type="radio" class="radio" name="user[sexo]" value="hombre" checked>Hombre
  	<input type="radio" class="radio"  name="user[sexo]" value="mujer">Mujer
</div>
  		
<div>
  	<label for="peso">Peso: </label>
  	<input id="peso" type="number" placeholder="Peso actual" name="user[peso]" required>
</div>
  		
<input class="btn" type="submit" value="Registrarse">